<Window x:Class="Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Client"
        mc:Ignorable="d"
        Title="Chat" Height="450" Width="300" Closing="Window_Closing" Loaded="Window_Loaded">
    <Grid>
        <Button x:Name="btn_ConnDisc" Click="ConDisClick" Content="Connect" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="100" Height="40"/>
        <TextBox x:Name="tb_name" HorizontalAlignment="Left" Margin="115,10,0,0" TextWrapping="Wrap" Text="Имя" VerticalAlignment="Top" Width="176" Height="40"/>
        <TextBox x:Name="tb_message" HorizontalAlignment="Center" Margin="0,344,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="300" Height="90"/>
        <ListBox x:Name="lb_chat" Margin="0,50,0,90" KeyDown="lb_chat_KeyDown"/>

    </Grid>
</Window>
